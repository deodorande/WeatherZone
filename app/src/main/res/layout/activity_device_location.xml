<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#372492"
    tools:context=".DeviceLocation">


    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Request location"
        android:id="@+id/loc_button"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        />


    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Coords: "
        android:id="@+id/loc_text"
        android:layout_below="@+id/loc_button"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:background="#010014"
        android:textColor="#ffffff"
        />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/lon"
        android:layout_centerHorizontal="true"
        android:textSize="24sp"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/lat"
        android:layout_below="@+id/lon"
        android:layout_centerHorizontal="true"
        android:textSize="24sp"
        />

</RelativeLayout>